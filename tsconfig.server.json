{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false
  },
  "include": ["server/**/*", "services/**/*", "types.ts", "constants.ts", "constants/**/*"],
  "exclude": ["node_modules", "dist", "dist-server"]
}
